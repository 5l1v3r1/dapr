{
  "compileOnSave": true,
  "compilerOptions": {
    "watch": true,
    "outDir": "./bin",
    "baseUrl": "src",
    "sourceMap": true,
    "declaration": false,
    "module": "commonjs",
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "typeRoots": [
      "node_modules/@types"
    ],
    "target": "es2018",
    "lib": [
      "esnext"
    ]
  },
  "include": [
    "src",
    "shared"
  ],
  "exclude": [
    "./ui",
    "**/*.spec.ts",
    "frida-scripts"
  ]
}